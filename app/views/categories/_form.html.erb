<% errors = @category.errors %>
<%= form_for @category do |form| %>
    <%= error_div errors do %>
        <%= content_tag :h2, "#{pluralize(errors.count, 'error')} prohibited this user from being saved:" %>
        <%= error_list errors %>
    <% end %>
    <%= form.label :category_name %>
    <%= form.text_field :category_name %>

    <%= form.label :category_description %>
    <%= form.text_field :category_description %>

    <%= form.submit 'Nueva Categoria' %>
<% end %>