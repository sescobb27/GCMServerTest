<% errors = @type.errors %>
<%= form_for @type do |form| %>
    <%= error_div errors do %>
        <%= content_tag :h2, "#{pluralize(errors.count, 'error')} prohibited this user from being saved:" %>
        <%= error_list errors %>
    <% end %>
    <%= form.label :type_name %>
    <%= form.text_field :type_name %>

    <%= form.label :type_description %>
    <%= form.text_field :type_description %>

    <%= form.submit 'Nuevo tipo' %>
<% end %>